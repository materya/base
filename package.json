{
  "name": "@materya/base",
  "description": "A collection of useful modules with a no-dependency, clean, tested and lightweight code philosophy.",
  "version": "1.0.0",
  "homepage": "https://github.com/materya/base",
  "url": "https://github.com/materya/base",
  "email": "sylver@materya.io",
  "repository": {
    "type": "git",
    "url": "https://github.com/materya/base.git"
  },
  "author": "Sylver <sylver@materya.io>",
  "bugs": {
    "url": "https://github.com/materya/base/issues"
  },
  "license": "GPL-3.0",
  "keywords": [
    "typescript",
    "node",
    "library",
    "tools"
  ],
  "engines": {
    "node": ">=8",
    "npm": ">=6"
  },
  "main": "./dist/index.js",
  "types": "./dist/@types/index.d.ts",
  "scripts": {
    "build": "run-p build:*",
    "build:all": "tsc -d",
    "develop": "tsc-watch --onSuccess \"node ./dist/server.js\"",
    "describe": "npm-scripts-info",
    "release": "standard-version -s",
    "test": "run-s test:*",
    "test:ts": "tsc --noEmit",
    "test:lint": "eslint 'src/**/*.ts'",
    "test:unit": "mocha test/**/*.ts",
    "coverage": "run-s coverage:*",
    "coverage:unit": "nyc --silent npm run test:unit",
    "coverage:report": "nyc report --reporter=lcov --reporter=text",
    "coverage:codecov": "codecov",
    "vulnerabilities": "snyk monitor"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "npm t"
    ]
  },
  "dependencies": {},
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/chai": "^4.2.11",
    "@types/debug": "^4.1.5",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.13.4",
    "chai": "^4.2.0",
    "codecov": "^3.6.5",
    "eslint": "^6.8.0",
    "eslint-config-materya": "^2.0.0",
    "eslint-import-resolver-typescript": "^2.0.0",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.8",
    "mocha": "^7.1.2",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.0.1",
    "source-map-support": "^0.5.19",
    "standard-version": "^6.0.1",
    "supertest": "^4.0.2",
    "ts-node": "^8.9.1",
    "tsc-watch": "^4.2.3",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.8.3"
  }
}
